@model todolist_mvc.Model.UserTask

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    <div>
        <a asp-action="Index">Назад</a>
    </div>
    <hr />

    <h3>Редактирование задачи</h3>
    <div class="row">

        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название задачи:</label>
                <input asp-for="Name" type="text">
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание задачи:</label>
                <textarea asp-for="Description"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label">Дедлайн:</label>
                <input asp-for="Deadline" type="date" id="taskDeadline">
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label">Приоритет:</label>
                <select asp-for="Priority" class="form-control">
                    @foreach (var item in ViewBag.PriorityList)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить">
            </div>

        </form>
    </div>
}
